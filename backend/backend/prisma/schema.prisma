generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String    // gehashter Passwort-String
  name      String
  role      UserRole  @default(CUSTOMER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  restaurants Restaurant[]
}

enum UserRole {
  CUSTOMER
  RESTAURANT_OWNER
}


model Restaurant {
  id          Int       @id @default(autoincrement())
  name        String
  address     String
  imageUrl      String?     // in /uploads/...

  owner       User      @relation(fields: [ownerId], references: [id])
  ownerId     Int

  menuItems     MenuItems[]
  reviews       Review[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model MenuItems {
  id            Int         @id @default(autoincrement())

  restaurant    Restaurant  @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  restaurantId  Int

  title         String
  description   String?
  imageUrl      String?

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([restaurantId])
}

model Review {
  id            Int         @id @default(autoincrement())

  restaurant    Restaurant  @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  restaurantId  Int

  rating        Int         // 1-5 (validate in backend, check constraint per SQL)

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([restaurantId])
}